{
  "name": "templates-poc",
  "private": true,
  "version": "1.0.0-SNAPSHOT",
  "description": "Templating UI POC",
  "repository": "https://github.com/SimY4/TemplatesPOC",
  "dependencies": {
    "angular": "^1.8.0",
    "angular-loader": "^1.8.0",
    "angular-resource": "^1.8.0",
    "angular-route": "^1.8.0",
    "angular-ui-bootstrap": "^2.5.6",
    "bootstrap": "^3.3.7",
    "codemirror": "^5.54.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.8.0",
    "braces": ">=2.3.1",
    "cpx": "^1.5.0",
    "http-server": "^0.12.3",
    "jasmine-core": "^3.3.0",
    "karma": "^5.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^3.3.1",
    "karma-junit-reporter": "^2.0.1",
    "protractor": "^5.4.4"
  },
  "scripts": {
    "postinstall": "npm run copy-libs",
    "prestart": "npm install",
    "copy-libs": "cpx \"node_modules/{angular,angular-*,bootstrap/dist,codemirror/lib,codemirror/mode/velocity,codemirror/mode/xml}/**/*\" src/webapp/lib -C",
    "start": "http-server ./src/webapp -a localhost -p 8000 -c-1",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run"
  }
}
